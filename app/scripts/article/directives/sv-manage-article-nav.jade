.author-article-nav(layout='row' layout-align="space-around center")
    div(ng-if='!article.$id')
        sv-lumx-button(btn-size="m" btn-color="teal" text-color="teal-300" btn-type="flat" btn-title="save-to-drafts" icon-type="fa" icon-name="fa-save"
        method-click='saveArticle(false)')
        sv-lumx-button(btn-size="m" btn-color="grey" text-color="grey-700" btn-type="flat" btn-title="post-article" icon-type="fa" icon-name="fa-send-o"
        method-click='saveArticle(true)')
    div(ng-if='article.$id')
        sv-lumx-button(btn-size="m" btn-color="teal" text-color="teal-300" btn-type="flat" btn-title="save-changes" icon-type="fa" icon-name="fa-save"
        method-click='saveArticle(article.isDraft)')

    sv-lumx-button(btn-size="m" btn-color="red" text-color="red-300" btn-type="flat" btn-title="cancel" icon-type="fa" icon-name="fa-close" btn-url="app.home"
    method-click='cancelArticle(true)')


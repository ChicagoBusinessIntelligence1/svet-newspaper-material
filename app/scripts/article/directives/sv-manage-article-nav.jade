.author-article-nav(layout='row' layout-align="space-around center")
    sv-lumx-button(ng-if='!article.$id' btn-size="m" btn-color="teal" text-color="teal-300" btn-type="flat" btn-title="save-to-drafts" icon-type="fa" icon-name="fa-lock"
    method-click='saveArticle(false)')
    sv-lumx-button(ng-if='!article.$id' btn-size="m" btn-color="grey" text-color="grey-700" btn-type="flat" btn-title="save-to-public" icon-type="fa" icon-name="fa-globe"
    method-click='saveArticle(true)')
    sv-lumx-button(ng-if='article.$id' btn-size="m" btn-color="teal" text-color="teal-300" btn-type="flat" btn-title="save-blog" icon-type="fa" icon-name="fa-globe"
    method-click='saveArticle(article.public)')
    sv-lumx-button(btn-size="m" btn-color="red" text-color="red-300" btn-type="flat" btn-title="cancel" icon-type="fa" icon-name="fa-close" btn-url="app.home"
    method-click='cancelArticle(true)')


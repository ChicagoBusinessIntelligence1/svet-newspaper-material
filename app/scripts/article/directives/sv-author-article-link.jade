div.card.mb
    div(layout='column')
        div.p.bgc-grey-200(layout='row' layout-align='space-between center' )
            div
                span.fs-caption.mr.tc-grey-50.bgc-grey-500(style='line-height:14px;padding:2px 4px') {{article.section|capitalize}}
                span.fs-caption {{article.timestamp|date}}
            sv-article-status
        div(layout-gt-sm='row' layout-sm='column' layout-align="space-between center")
            div.p
                a(ui-sref='app.article({id:article.id})' style='text-decoration:none')
                    span.display-block {{article.title | length:25}}
                    span.display-block.fs-body-1.tc-black-2 {{article.body | length:50}}
            div.mb.pl.pr.pt
                button.btn.btn--xs.btn--white.btn--raised.mr(lx-ripple='' ng-click='editCl({cl:cl})')
                    i.mdi.mdi-share-variant.mr
                    | {{'share'|translate}}
                button.btn.btn--xs.btn--white.btn--raised.mr(lx-ripple='' ng-click='editCl({cl:cl})')
                    i.mdi.mdi-pencil.mr
                    | {{'edit'|translate}}
                button.btn.btn--xs.btn--white.btn--raised(lx-ripple='' ng-click='removeCl({cl:cl})')
                    i.mdi.mdi-close.mr
                    | {{'delete'|translate}}
        .bgc-grey-100.p(layout='row' layout-align='start center' )
            span.fs-caption.tc-grey-500.mr Comments: 4
            span.fs-caption.tc-grey-500.mr Shares: 5
            sv-lumx-users-dropdown.ml(btn-title="likes" action-counter="5" user-name="user.name")


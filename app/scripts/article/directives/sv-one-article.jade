div(flex-container='column' flex)
    .card(class='m')
        div.bgc-grey-200(layout='row' layout-align='space-between center' style='padding:8px 12px')
            sv-aritcle-public-statistics
            sv-edit-article-btn(ng-if='user && news.authorKey===user.key' news='news')
        div(flex-container='column' class='p+')
            div(class='mb++')
                span.display-block.fs-display-1 {{news.title}}
                span.fs-caption.display-block.margin-bottom-5 Svet Media Group
                div(class='mb+')
                    span.display-block.fs-caption Автор: {{news.author}}
                    span.display-block.fs-caption Дата публикации: {{news.date}}
                div.atricle-img.mdc-img-bw(class='mb+')
                    img(ng-src="{{news.img}}" ng-if='news.title')
                div(class='mb+')
                    p.fs-body-2 {{news.body}}
    sv-comments(comments = 'news.comments' key='news.fbkey')
    sv-add-comment(key='key')


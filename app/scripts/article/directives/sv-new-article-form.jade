div
    form(name='articleForm' flow-init novalidate sv-form-val)
        div(layout='row', layout-sm='column')
            md-input-container(flex)
                label {{'article-author'|translate}}
                input(ng-model='article.author' name='author' required='')
        div(layout-gt-sm='row' layout-sm='column' layout-align-gt-sm='space-between center')
            div( ng-if='artType==="article"' flex)
                div(ng-if='sections')
                    md-select(ng-model='article.section')
                        md-select-label {{article.section?article.section:'Section'|capitalize}}
                        md-option(ng-repeat='section in sections track by $index' ng-value='section.$id' ) {{section.$id}}
            md-input-container(flex='')
                label {{'article-topic'|translate}}
                input(ng-model='article.topic' name='topic')
        div(layout='column')
            md-input-container(flex='')
                label {{'article-title'|translate}}
                input(ng-model='article.title' type="text" md-maxlength='150' required='' name='title')
            md-input-container(flex='')
                label {{'article-summary'|translate}}
                input(ng-model='article.summary' type="text" md-maxlength='150' required='' name='summary')
            md-input-container(flex='')
                label() {{'article-content'|translate}}
                sv-svet-pad(body='article.body')
        div(layout='row')
            md-input-container(flex)
                label {{'tags'|translate}}
                input(ng-model='article.tags' type="text" md-maxlength="100" required)
        div(layout='column' class='mb+')
            span.mdc-display-inline-block.fs-subhead.tc-grey-700(class='mt') {{'upload-img'|translate}}
            //img(ng-src="{{article.img}}")
            sv-image-upload

@import 'nib'
/**********************
 =search
***********************/
.search-filter__cancel
.search-filter__label
  color #757575 !important

.sv-label-counter
  margin-left 4px
  font-weight bold
  padding 2px 4px
  color #9E9E9E
  font-size 11px

.author-article-nav
  backround-color none !important
  background transparent !important
  height auto

.article-thumb-link
  text-decoration none
  cursor pointer
  line-height 14px
  &:hover
  &:active
  &:focus
    text-decoration none !important

.article-thumb-body
  line-height 16px

.article-thumb-title
  line-height 20px
.article-thumb-author
  line-height 16px

.radio-body
  line-height 16px
  font-weight 600

.radio-subhead
  line-height 20px
  font-weight 600
  margin-bottom 4px

.sv-responsive-button
  @media screen and (max-width: 450px)
    font-size 9px !important



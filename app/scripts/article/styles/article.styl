.article-thumb-link
  text-decoration none
  cursor pointer
  line-height 14px
  &:hover
  &:active
  &:focus
    text-decoration none !important

.sv-article-thumb
  border-bottom 1px rgba(0, 0, 0, 0.117647) solid
  padding-bottom 8px

.sv-article-thumb:nth-last-child(1)
  border-bottom none !important

.article-thumb-body
  line-height 16px

.article-thumb-title
  line-height 20px

.article-thumb-author
  line-height 16px

.radio-body
  line-height 16px
  font-weight 600

.radio-subhead
  line-height 20px
  font-weight 600
  margin-bottom 4px

.sv-responsive-button
  @media screen and (max-width: 450px)
    font-size 9px !important



.secondNewsMargin:nth-child(odd)
  padding-right 8px

.secondNewsMargin:nth-child(even)
  padding-left 8px !important

.search-filter__cancel
.search-filter__label
  color #757575 !important

.sv-label-counter
  margin-left 4px
  font-weight bold
  padding 2px 4px
  color #9E9E9E
  font-size 11px


ul.list(class='mt++')
    li.list-row.list-row--multi-line.list-row--has-separator(ng-repeat='gn in ctrl.news')
        .list-row__primary
            img.img-round(ng-src='{{gn.img}}', width='40', height='40')
        .list-row__content
            span.display-block {{gn.title | length:25}}
            span.display-block.fs-body-1.tc-black-2 {{gn.body | length:50}}


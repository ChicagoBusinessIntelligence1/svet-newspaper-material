div(layout='column')
    div(ng-if='!!user' layout='column')
        form(layout='column' name='addFeedback' ng-submit='submitFeedback()')
            md-input-container.ml.mr
                label {{'your-feedback'|translate}}
                input(ng-model='feedback.body') {{feedback.body}}
            md-input-container.ml.mr
                label {{'your-feedback'|translate}}
                textarea(ng-model='feedback.body') {{feedback.body}}
            .ml.mr.mb(layout-sm='row' layout-align-sm='center' ng-if='feedback.body')
                button.btn.btn--m.btn--white.btn--raised(type='submit' )
                    i.fa.fa-send-o.fa-fw &nbsp
                    | {{'post'|translate}}

.card.p(flow-init='')
    form(name='adForm' novalidate flex-container='column' ng-submit='addBusinessAd(ad,$flow.files[0])')
        div(class='mt++', flex-container='row', flex-gutter='24')
            div(flex-item='')
                lx-text-field(label='Campaign Name'
                fixed-label='true'
                error='isInvalid("name")'
                icon='briefcase')
                    input(ng-model='ad.name'
                    name='name'
                    required
                    type='text')
        div(flex-container='row')
            .radio-group
                .radio-button
                    input#radio1.radio-button__input(type='radio', name='place', ng-model="ad.place" value='home.top')
                    label.radio-button__label(for='radio1') Home Page Top
                .radio-button
                    input#radio2.radio-button__input(type='radio', name='place', ng-model="ad.place" value='home.middle')
                    label.radio-button__label(for='radio2') Home Page Middle
        div(flex-container='row')
            div(flow-init='')
            sv-image-upload(img='ad.banner')
        div(flex-container='row')
            button.btn.btn--s.btn--raised.btn--white.m( type='submit' lx-ripple value="Save")
                i.mdi.mdi-send.mr
                | Start Campaign
            button.btn.btn--s.btn--raised.btn--white.m(type='button' lx-ripple ng-click='cancelAddition()')
                i.mdi.mdi-close
                | &nbsp Cancel

div(layout='column' flex='')
    div(flex='')
        md-grid-list(
        md-cols-sm='1'
        md-cols-gt-sm='3'

        md-row-height="2:3"
        md-gutter='15px')
            md-grid-tile.card(ng-repeat='i in issues')
                a(href='{{i.url}}' ng-if="!isSaturday")
                    img(src="img/archive/new-svet-thumb.jpg")
                a(href='{{i.url}}' ng-if="isSaturday")
                    img(src="img/archive/saturday-thumb.jpg")


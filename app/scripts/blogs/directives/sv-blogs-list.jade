ul.list-unstyled(layout='column')
    li(class="mb" ng-repeat='n in blogs')
        .card(layout="row" class='pt pb')
            div.p(style='float:left' class='')
                a(ui-sref='app.blogs.one-blog-article({authorName:n.author,blogId:n.fbkey})' style='text-decoration:none')
                    sv-img-background.sv-img-thumb( sv-image="n.img")
            div
                a.tc-grey-800(ui-sref='app.article({id:n.fbkey})' style='text-decoration:none')
                    span.display-block.fs-subhead(ng-bind-html='safeParsing(n.title)')
                span.fs-caption By &nbsp
                span.fs-caption.tc-grey-500(ng-bind-html='safeParsing((n.author|authorNameFr))')
                span.display-block.fs-body-1.tc-black-2(ng-bind-html='safeParsing(n.summary)')
                div(layout='row' layout-align='end start' class='pr')
                    button.btn.btn--xs.btn--grey.btn--flat(ui-sref='app.article({id:n.fbkey})' ) {{'read-more'|translate}} >>

div(layout flex layout-align='center')
	md-card(flex='' flex-gt-sm='60' flex-gt-md='80' flex-gt-lg='50')
		md-card-content
			span.display-block.fs-title.mb Log In to Your Account
			md-divider
			form.mt(layout='column' name="loginForm" layout-fill flex)
				div(flex='')
					lx-text-field(label='Email / Электронный Адрес', icon='email', fixed-label='true')
						input(type='email', ng-model='login.user.email')
				div(flex='')
					lx-text-field(label='Password / Пароль', icon='lock', fixed-label='true')
						input(type='password', ng-model='login.user.password')
				div(flex'')
					button.btn.btn--s.btn--raised.btn--white(lx-ripple ng-click='login.singIn()' class="mt++")
						i.mdi.mdi-arrow-right-bold &nbsp
						| Войти
			md-divider(class='mt+++')
			div(class='mt' layout='row' layout-align='space-between')
				div.display-block.fs-body-1 Do not have an account? &nbsp
				div.mdc-text-right
				button.btn.btn--s.btn--flat.fs-caption.btn--indigo(lx-ripple ui-sref='app.sign-up') Зарегистрироваться

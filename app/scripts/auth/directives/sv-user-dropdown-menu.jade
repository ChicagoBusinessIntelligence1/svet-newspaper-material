lx-dropdown(position='right')
    button.btn.btn--m.btn--icon.btn--white.tc-black(lx-ripple  lx-dropdown-toggle='' ng-class="{'mr+':ctrl.gtSm}")
        img(ng-src="{{user.avatar}}" style='min-height:30px')
    lx-dropdown-menu
        ul
            li
                a.dropdown-link(ui-sref="app.user.user-dashboard")
                    i.mdi.mdi-view-dashboard &nbsp
                    | {{'dashboard'|translate}}
            li
                a.dropdown-link(ui-sref="app.user.author-articles")
                    i.mdi.mdi-view-list &nbsp
                    | {{'my-articles'|translate}}
            li
                a.dropdown-link(ui-sref="app.user.author-drafts")
                    i.mdi.mdi-file &nbsp
                    | {{'my-drafts'|translate}}
            li
                a.dropdown-link(ui-sref='app.user.create-article')
                    i.mdi.mdi-pencil &nbsp
                    | {{'create-article'|translate}}
            li.dropdown-divider
            li
                a.dropdown-link(ng-click='logout()')
                    i.mdi.mdi-logout &nbsp
                    | {{'logout'|translate}}

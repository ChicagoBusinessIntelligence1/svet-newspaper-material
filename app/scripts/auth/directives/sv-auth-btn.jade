div(layout='row' layout-align="end center" ng-class="{'mr+':ctrl.gtMd}")
	.fab.l(ng-if='!user')
		button.fab__primary.btn.btn--l.btn--fab.btn--white(lx-ripple='' ng-class="{'mr+':ctrl.gtSm}")
			i.mdi.mdi-account
			i.mdi.mdi-login
		.fab__actions(ng-class="{'fab__actions--left':ctrl.gtSm,'fab__actions--down':ctrl.sm, 'auth-sm':ctrl.sm} " )
			a.btn.btn--m.btn--fab.tc-red-500.btn--white(lx-ripple ui-sref='app.svet-login')
				span.fs-caption Svet
			button.btn.btn--m.btn-blue.btn--fab.tc-blue-800.btn--white(lx-ripple ng-click='ctrl.loginSvetUser("facebook")')
				i.mdi.mdi-facebook
			button.btn.btn--m.btn--fab.tc-red-900.btn--white(lx-ripple ng-click='ctrl.loginSvetUser("google")')
				i.mdi.mdi-google-plus
	lx-dropdown(position='right' ng-if='!!user')
		button.btn.btn--l.btn--icon.btn--white.tc-black(lx-ripple class="mr+" lx-dropdown-toggle='')
			img(ng-src="{{user.avatar}}")
			| Author Name
		lx-dropdown-menu
			ul
				li
					a.dropdown-link(ng-click='dropdownAlert()') Notification
				li
					a.dropdown-link Another action
				li.dropdown-divider
				li
					span.dropdown-link.dropdown-link--is-header Settings
				li
					a.dropdown-link(ng-click='ctrl.logout()')
						i.mdi.mdi-logout &nbsp
						| Log Out


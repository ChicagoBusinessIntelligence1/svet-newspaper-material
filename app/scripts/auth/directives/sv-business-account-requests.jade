.data-table-container.card(class='pb+++')
    table.data-table.data-table--has-primary.data-table--has-secondary
        tbody
            tr.data-table__clickable-row.pt(layout='row' style="border-bottom: 1px #EEEEEE dotted" ng-repeat='u in users' layout-align="space-between center")
                td(flex='15')
                    span.fs-caption {{u.requestCorporateSubmited.submittedDate|date}}
                td(flex='')
                    span.fs-caption.mr
                        strong {{u.userName}}
                td(flex='')
                    div(ng-if="u.requestCorporateSubmited.accepted || u.requestCorporateSubmited.rejected")
                        span.fs-caption.mdc-display-inline-block.mr(ng-if='u.requestCorporateSubmited.decisionDate') {{u.requestCorporateSubmited.decisionDate|date}}
                        span.fs-caption.tc-teal-800(ng-if="u.requestCorporateSubmited.accepted") Accepted
                        span.fs-caption.tc-red-800(ng-if="u.requestCorporateSubmited.rejected") Rejected
                td(flex='')
                    button.btn.btn--xs.btn--teal.bgc-teal-300.btn--raised.mr( style='font-size:9px'
                    ng-if="!u.requestCorporateSubmited.accepted" lx-ripple='' ng-click='accept(u)')
                        i.mdi.mdi-check.mr
                        span.fs-caption Accept
                    button.btn.btn--xs.btn--teal.bgc-teal-300.btn--raised.mr(disabled style='font-size:9px'
                    ng-if="u.requestCorporateSubmited.accepted" lx-ripple='' ng-click='accept(u)')
                        i.mdi.mdi-check.mr
                        span.fs-caption Accept
                    button.btn.btn--xs.btn--red.btn--raised.bgc-red-300( style='font-size:9px'
                    ng-if="u.requestCorporateSubmited.accepted || !u.requestCorporateSubmited.accepted && !u.requestCorporateSubmited.rejected " lx-ripple='' ng-click='reject(u)' )
                        i.mdi.mdi-minus-circle.mr
                        span.fs-caption Reject
                    button.btn.btn--xs.btn--red.btn--raised.bgc-red-300(disabled style='font-size:9px'
                    ng-if="u.requestCorporateSubmited.rejected " lx-ripple='' ng-click='reject(u)' )
                        i.mdi.mdi-minus-circle.mr
                        span.fs-caption Reject


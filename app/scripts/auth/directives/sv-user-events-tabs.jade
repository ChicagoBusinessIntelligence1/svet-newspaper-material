div
    md-tabs(md-selected='data.selectedIndex', md-border-bottom='' md-dynamic-height)
        md-tab.sv-tabs(md-stretch-tabs="always" )
            md-tab-label {{"planned-events"|translate}}
            md-tab-body
                sv-profile-subheader(subhead-title="planned-events")
                .card.mb.p(ng-repeat='e in events|eventsInvitation:data.selectedIndex' layout-gt-sm="row" layout-align-gt-sm='space-between center')
                    div.mb
                        a.tc-grey-700(style='cursor:pointer;')
                            span.display-block.fs-body-2 {{e.title}}
                            span.display-block.fs-caption {{e.startDate}}
                    button.btn.btn--s.btn--white.btn--raised(lx-ripple='' ng-click='cancelAcceptedInvitation(e)')
                        i.mdi.mdi-account-remove.mr
                        | {{'unlink'|translate}}
        md-tab.sv-tabs(md-stretch-tabs="always" )
            md-tab-label {{"visited-events"|translate}}
            md-tab-body
                sv-profile-subheader(subhead-title="visited-events")
                .card.p.mb
                    span.fs-subhead.display-block.text-center You do not have any visited event yet
        md-tab.sv-tabs(md-stretch-tabs="always" )
            md-tab-label {{"invitations"|translate}}
            md-tab-body
                sv-profile-subheader(subhead-title="invitations")
                .card.mb.p(ng-repeat='e in events|eventsInvitation:data.selectedIndex' layout-gt-sm="row" layout-align-gt-sm='space-between center')
                    div.mb
                        a.tc-grey-700(style='cursor:pointer;')
                            span.display-block.fs-body-2 {{e.title}}
                            span.display-block.fs-caption {{e.startDate}}
                    button.btn.btn--s.btn--white.btn--raised(lx-ripple='' ng-click='acceptInvitation(e)')
                        i.mdi.mdi-account-check.mr
                        | {{'accept'|translate}}

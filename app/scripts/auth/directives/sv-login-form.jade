div(flex-container='column')
    .card
        div(class='p+')
            span.display-block.fs-title.mb {{headerTitle|translate}}
            .divider.divider--dark
            form.mt(flex-container='column' name="loginForm")
                div(flex-container='row')
                    div(flex-item='')
                        lx-text-field(label='{{email|translate}}', icon='email')
                            input(type='text', ng-model='user.email')
                div(flex-container='row' class="mb+")
                    div(flex-item='')
                        lx-text-field(label='{{password|translate}}', icon='lock')
                            input(type='password', ng-model='user.password')
                div(flex-container='row' class="mb+")
                    button.btn.btn--s.btn--raised.btn--white(lx-ripple ng-click='singIn()')
                        i.mdi.mdi-login &nbsp
                        | {{login|translate}}
                div.mb(flex-container='row' flex-align='start')
                    a.register-link.fs-body-2(ui-sref='app.sign-up') {{registerAccount|translate}}
                    span.fs-body-2 , {{newUser|translate}}
        div.bgc-grey-200(flex-container='row' flex-align='start' class='p+')
            sv-form-social-buttons



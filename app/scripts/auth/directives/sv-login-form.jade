.card
    div.bgc-grey-200(class='pl+ pr+ pt pb')
        span.display-block.fs-headline.mb(class='mb+ mt+') {{headerTitle|translate}}
    div(class='p+')
        form.mt(name="loginForm" sv-form-val novalidate)
            md-input-container(class='mb+')
                label {{email|translate}}
                input(name="email" type='text', ng-model='user.email' required)
            md-input-container(class='mb+')
                label {{password|translate}}
                input(name="password" type='password', ng-model='user.password' required)
            div(class='mb+')
                button.btn.btn--s.btn--raised.btn--white(lx-ripple ng-click='singIn()')
                    i.mdi.mdi-login &nbsp
                    | {{loginBtn|translate}}
            div(class='mb+')
                a.register-link.fs-body-2(ui-sref='app.sign-up') {{registerAccount|translate}}
                span.fs-body-2 , {{newUser|translate}}
    div.bgc-grey-200(flex-container='row' flex-align='start' class='p+')
        sv-form-social-buttons



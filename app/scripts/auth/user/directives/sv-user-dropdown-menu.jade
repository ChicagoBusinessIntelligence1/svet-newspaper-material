lx-dropdown(position='right')
    button.btn.btn--l.btn--white.btn--fab.btn-flat(lx-dropdown-toggle='' ng-class="{'mr+':gtSm}")
        img.img-round(ng-src="{{user.avatar || defaultAvatar}}" style='width:40px;height:40px' )
    lx-dropdown-menu
        ul
            li
                a.dropdown-link(ui-sref="app.user.dashboard({uid:user.userName})")
                    i.mdi.mdi-view-dashboard &nbsp
                    | {{'dashboard'|translate}}
            li
                a.dropdown-link(ui-sref="app.user.author-articles({uid:user.userName})"  )
                    i.mdi.mdi-view-list &nbsp
                    span(ng-if='user.role==="reader"') {{'my-blog'|translate}}
                    span(ng-if='user.role==="author"') {{'my-articles'|translate}}
            li
                a.dropdown-link(ui-sref="app.user.ad({uid:user.userName })" )
                    i.fa.fa-bullhorn &nbsp
                    span(ng-if='user.role==="customer"') {{'my-ad'|translate}}
                    span(ng-if='user.role==="author" || user.role==="reader"') {{'my-classified'|translate}}
            li
                a.dropdown-link(ui-sref="app.user.user-events({uid:user.userName})")
                    i.mdi.mdi-tag &nbsp
                    | {{'events'|translate}}
            li
                a.dropdown-link(ui-sref="app.user.social({uid:user.userName})")
                    i.mdi.mdi-emoticon &nbsp
                    | {{'community'|translate}}
            li.dropdown-divider
            li
                a.dropdown-link.tc-red-300(ui-sref='app.user.create-article({uid:user.userName})'  ng-if='user.role==="author"')
                    i.mdi.mdi-pencil &nbsp
                    | {{'create-article'|translate}}
            li.dropdown-divider
            li
                a.dropdown-link(ng-click='logout()')
                    i.mdi.mdi-logout &nbsp
                    | {{'logout'|translate}}

.card.bgc-grey-100.top-profile-nav
    ul.list-unstyled(layout='row' layout-align="space-between center")
        li(ui-sref-active='sv-active-user-menu')
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.dashboard' lx-ripple='' style='font-size:11px;padding:0px 10px')
                i.mdi.mdi-view-dashboard &nbsp
                span(hide-sm) {{'dashboard'|translate}}
        li(ui-sref-active='sv-active-user-menu' )
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.author-articles' lx-ripple='' style='font-size:11px;padding:0px 10px')
                i.mdi.mdi-view-list &nbsp
                span(hide-sm ng-if='user.role===("author")') {{'my-articles'|translate}}
                span(hide-sm ng-if='user.role===("reader")') {{'my-blog'|translate}}
        li(ui-sref-active='sv-active-user-menu'  )
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.ad' lx-ripple='' style='font-size:11px;padding:0px 10px')
                i.fa.fa-bullhorn &nbsp
                span(hide-sm)(ng-if='user.role===("author")  || user.role==="reader"') {{'my-classified'|translate}}
                span(hide-sm ng-if='user.role===("customer")') {{'my-ad'|translate}}
        li(ui-sref-active='sv-active-user-menu')
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.social' lx-ripple='' style='font-size:11px;padding:0px 10px')
                i.mdi.mdi-emoticon &nbsp
                span(hide-sm) {{'community'|translate}}
        li(ui-sref-active='sv-active-user-menu')
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.user-events' lx-ripple='' style='font-size:11px;padding:0px 10px')
                i.mdi.mdi-tag &nbsp
                span(hide-sm) {{'events'|translate}}

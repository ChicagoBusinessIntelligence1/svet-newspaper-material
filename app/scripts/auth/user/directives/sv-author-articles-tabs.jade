div
    md-tabs(md-selected='selectedIndex', md-border-bottom='' md-dynamic-height)
        md-tab.sv-tabs(md-stretch-tabs="always")
            md-tab-label {{'articles'|translate}}
            md-tab-body
                div(ng-repeat='article in articles|articleBlogFr:selectedIndex|authorFr:user.key|orderBy:"-timestamp"')
                    sv-author-article-link(article='article')
        md-tab.sv-tabs(md-stretch-tabs="always")
            md-tab-label {{'blogs'|translate}}
            md-tab-body
                div(ng-repeat='article in articles|articleBlogFr:selectedIndex|authorFr:user.key|orderBy:"-timestamp"')
                    sv-author-article-link(article='article')


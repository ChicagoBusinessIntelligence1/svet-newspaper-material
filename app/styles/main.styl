/*Bugs with Safari*/

html, body
  font-family 'Roboto', sans-serif
  font-size 14px
  height 100%
  margin 0px
  padding 0px

/*custom classes*/
.mdc-no-margin
  margin 0px

.mdc-no-margin-top
  margin-top 0px !important

.mdc-img-responsive
  width 100%

.mdc-subhead
  font-size 16px !important

.mdc-display-inline-block
  display inline-block

.mdc-link
  text-decoration none !important
  display inline-block

.mdc-img-sepia
  -webkit-filter: sepia(1);
  filter: sepia(1);

.mdc-img-bw
  -webkit-filter: grayscale(1);
  filter: grayscale(1);

.fw-700
  font-weight 700px !important

.mdc-text-right
  text-align right !important

.mdc-overflow-hidden
  overflow hidden

.md-default-theme
  color #393939 !important

.mdc-label-default
  padding 4px 5px
  border-radius 2px

.top-profile-nav
  padding 4px 8px

.cursor-pointer
  cursor pointer

/***************/
/*=lumx custom typography*/
.fs-subhead
  font-weight 700

.fs-10
  font-size 10px

.text-center
  text-align center !important

md-sidenav
  min-width 300px !important
  max-width 300px !important

md-sidenav
  &.md-locked-open
    width 300px !important
    min-width 300px !important
    max-width 300px !important

.svet-logo
  position relative
  line-height 70px
  font-size 30px
  color color-svet-red
  font-weight 800
  font-family "Roboto", sans-serif


.svet-logo
  width 260px

.logo-link
  display block
  margin 8px auto
  height auto
  width 120px

  @media screen and (max-width 992px)
    width 100px


.logo-img
  width 120px
  height auto

.toolbar-svet
  @media screen and (min-width 992px)
    height 72px

.toolbar-custom
  background-color #555555 !important


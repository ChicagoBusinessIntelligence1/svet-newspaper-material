/*Bugs with Safari*/

html, body
  font-family 'Roboto', sans-serif
  font-size 14px
  height 100%
  margin 0px
  padding 0px

/*custom classes*/
.mdc-no-margin
  margin 0px

.mdc-no-margin-top
  margin-top 0px !important

.mdc-img-responsive
  width 100%

.mdc-subhead
  font-size 16px !important

.mdc-display-inline-block
  display inline-block

.mdc-link
  text-decoration none !important
  display inline-block

.mdc-img-sepia
  -webkit-filter sepia(1)
  filter sepia(1)

.mdc-img-bw
  -ms-filter grayscale(1)
  -webkit-filter grayscale(1)
  filter grayscale(1)

.fw-700
  font-weight 700px !important

.mdc-text-right
  text-align right !important

.mdc-text-left
  text-align left !important

.mdc-text-center
  text-align center !important

.mdc-overflow-hidden
  overflow hidden

.md-default-theme
  color #393939 !important

.mdc-underline-red
  border-bottom 2px #E57373 solid !important

.mdc-label-default
  padding 4px 5px
  border-radius 3px

.top-profile-nav
  padding 4px 8px

.cursor-pointer
  cursor pointer

.bgc-dark-grey
  background-color #555555 !important

